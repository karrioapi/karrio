{
  "extends": "@karrio/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next",
      },
    ],
    "baseUrl": ".",
    "paths": {
      "@karrio/console/*": ["./*"],
      "react": ["./node_modules/@types/react"],
    },
    "typeRoots": ["./node_modules/@types", "./types"],
  },
  "include": [
    ".",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts"
  ],
  "exclude": ["dist", "build", "node_modules"],
}
