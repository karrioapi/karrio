SCHEMAS=./schemas
LIB_MODULES=./karrio/schemas/dhl_parcel_de
find "${LIB_MODULES}" -name "*.py" -exec rm -r {} \;
touch "${LIB_MODULES}/__init__.py"

generate_schema() {
    echo "Generating $1..."
    "${ROOT}/bin/cli" codegen generate "$1" "$2" --no-nice-property-names
}

# JSON schemas for shipping and pickup APIs
generate_schema "${SCHEMAS}/cancel_response.json" "${LIB_MODULES}/cancel_response.py"
generate_schema "${SCHEMAS}/error_response.json" "${LIB_MODULES}/error_response.py"
generate_schema "${SCHEMAS}/shipping_request.json" "${LIB_MODULES}/shipping_request.py"
generate_schema "${SCHEMAS}/shipping_response.json" "${LIB_MODULES}/shipping_response.py"
generate_schema "${SCHEMAS}/pickup_request.json" "${LIB_MODULES}/pickup_request.py"
generate_schema "${SCHEMAS}/pickup_response.json" "${LIB_MODULES}/pickup_response.py"
generate_schema "${SCHEMAS}/pickup_cancel_response.json" "${LIB_MODULES}/pickup_cancel_response.py"
generate_schema "${SCHEMAS}/pickup_status_response.json" "${LIB_MODULES}/pickup_status_response.py"

# XML schemas for dedicated Parcel DE tracking API
# Uses XML request in query parameter and XML response
generateDS --no-namespace-defs -o "${LIB_MODULES}/tracking_request.py" "${SCHEMAS}/tracking_request.xsd"
generateDS --no-namespace-defs -o "${LIB_MODULES}/tracking_response.py" "${SCHEMAS}/tracking_response.xsd"
