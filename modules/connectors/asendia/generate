SCHEMAS=./schemas
LIB_MODULES=./karrio/schemas/asendia
find "${LIB_MODULES}" -name "*.py" -exec rm -r {} \;
touch "${LIB_MODULES}/__init__.py"

# Using --no-nice-property-names because Asendia API uses camelCase field names
kcli codegen generate "${SCHEMAS}/error_response.json" "${LIB_MODULES}/error_response.py" --no-nice-property-names
kcli codegen generate "${SCHEMAS}/auth_request.json" "${LIB_MODULES}/auth_request.py" --no-nice-property-names
kcli codegen generate "${SCHEMAS}/auth_response.json" "${LIB_MODULES}/auth_response.py" --no-nice-property-names
kcli codegen generate "${SCHEMAS}/shipment_request.json" "${LIB_MODULES}/shipment_request.py" --no-nice-property-names
kcli codegen generate "${SCHEMAS}/shipment_response.json" "${LIB_MODULES}/shipment_response.py" --no-nice-property-names
kcli codegen generate "${SCHEMAS}/shipment_cancel_request.json" "${LIB_MODULES}/shipment_cancel_request.py" --no-nice-property-names
kcli codegen generate "${SCHEMAS}/shipment_cancel_response.json" "${LIB_MODULES}/shipment_cancel_response.py" --no-nice-property-names
kcli codegen generate "${SCHEMAS}/tracking_request.json" "${LIB_MODULES}/tracking_request.py" --no-nice-property-names
kcli codegen generate "${SCHEMAS}/tracking_response.json" "${LIB_MODULES}/tracking_response.py" --no-nice-property-names
kcli codegen generate "${SCHEMAS}/manifest_request.json" "${LIB_MODULES}/manifest_request.py" --no-nice-property-names
kcli codegen generate "${SCHEMAS}/manifest_response.json" "${LIB_MODULES}/manifest_response.py" --no-nice-property-names
