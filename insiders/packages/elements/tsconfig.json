{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@karrio/elements/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "build", "node_modules"]
}
